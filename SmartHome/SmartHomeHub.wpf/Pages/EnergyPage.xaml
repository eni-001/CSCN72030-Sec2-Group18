<UserControl x:Class="SmartHome.Wpf.Pages.EnergyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Energy Usage"
                   FontSize="24"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Margin="0,0,0,16"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Fan card -->
            <Border Style="{StaticResource CardStyle}" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Ceiling Fan"
                               FontSize="16"
                               FontWeight="SemiBold"/>

                    <TextBlock x:Name="FanSpeedText"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,8,0,0"/>

                    <TextBlock x:Name="FanEnergyText"
                               FontSize="11"
                               Foreground="#6B7280"/>

                    <TextBlock Text="Speed"
                               FontSize="12"
                               Foreground="#6B7280"
                               Margin="0,12,0,0"/>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,4,0,0">
                        <RadioButton Content="Off" GroupName="FanSpeed"
                                     Checked="FanSpeedRadio_Checked"/>
                        <RadioButton Content="Low" GroupName="FanSpeed"
                                     Margin="8,0,0,0"
                                     Checked="FanSpeedRadio_Checked"/>
                        <RadioButton Content="Medium" GroupName="FanSpeed"
                                     Margin="8,0,0,0"
                                     Checked="FanSpeedRadio_Checked"/>
                        <RadioButton Content="High" GroupName="FanSpeed"
                                     Margin="8,0,0,0"
                                     Checked="FanSpeedRadio_Checked"/>
                    </StackPanel>

                    <CheckBox x:Name="EnergyModeCheck"
                              Content="Energy Saving Mode"
                              Margin="0,12,0,0"
                              Checked="EnergyModeCheck_Changed"
                              Unchecked="EnergyModeCheck_Changed"/>
                </StackPanel>
            </Border>

            <!-- Heater summary -->
            <Border Style="{StaticResource CardStyle}" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Heater"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="HeaterStateText"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,8,0,0"/>
                    <TextBlock x:Name="HeaterDetailsText"
                               FontSize="11"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
