<UserControl x:Class="SmartHome.Wpf.Pages.LightingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Lighting"
                   FontSize="24"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Margin="0,0,0,16"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: light status -->
            <Border Style="{StaticResource CardStyle}" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Living Room Light"
                               FontSize="16"
                               FontWeight="SemiBold"/>

                    <TextBlock x:Name="LightStateText"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,8,0,0"/>

                    <TextBlock x:Name="LightBrightnessText"
                               FontSize="12"
                               Foreground="#6B7280"/>

                    <CheckBox x:Name="LightAutoCheck"
                              Content="Auto Mode"
                              Margin="0,12,0,0"
                              Checked="LightAutoCheck_Changed"
                              Unchecked="LightAutoCheck_Changed"/>
                </StackPanel>
            </Border>

            <!-- Right: controls -->
            <Border Style="{StaticResource CardStyle}" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Power"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <ToggleButton x:Name="LightToggle"
                                  Margin="0,6,0,0"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  Click="LightToggle_Click"/>

                    <TextBlock Text="Brightness"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,16,0,0"/>
                    <Slider x:Name="BrightnessSlider"
                            Minimum="0"
                            Maximum="100"
                            Margin="0,6,0,0"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            ValueChanged="BrightnessSlider_ValueChanged"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
